{
  "name": "ultra-reporter-app",
  "version": "0.7.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "deploy": "turbo run build --scope=app --includeDependencies --no-deps",
    "format:fix": "prettier --write .",
    "eslint": "eslint --report-unused-disable-directives",
    "format": "prettier --check .",
    "prepare": "husky",
    "release": "release-it --ci",
    "release:major": "pnpm release major",
    "release:minor": "pnpm release minor",
    "release:patch": "pnpm release patch",
    "release:premajor": "pnpm beta premajor",
    "release:preminor": "pnpm beta preminor",
    "release:prepatch": "pnpm beta prepatch"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.21.0",
    "@next/eslint-plugin-next": "^15.2.0",
    "@release-it-plugins/lerna-changelog": "^7.0.0",
    "@stylistic/eslint-plugin-js": "^4.1.0",
    "@stylistic/eslint-plugin-ts": "^4.1.0",
    "@types/node": "^22.13.5",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vercel/style-guide": "^6.0.0",
    "eslint": "^9.21.0",
    "eslint-config-next": "15.2.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-config-turbo": "2.4.4",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "release-it": "^17.11.0",
    "release-it-pnpm": "^4.6.4",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "pnpm format:fix",
      "pnpm format"
    ],
    "**/*.mjs": [
      "pnpm format:fix",
      "pnpm format"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.4.1"
}
